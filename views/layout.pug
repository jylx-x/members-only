doctype html
html.overflow-hidden
  head
    title Subscribers Only
    link(rel="shortcut icon", href="/public/images/chat-square-dots.svg", type="image/x-icon")
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="https://fonts.googleapis.com/css2?family=Didact+Gothic&display=swap" rel="stylesheet")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
  body.overflow-auto.vh-100.d-flex.flex-column.justify-content-between
    nav.navbar.navbar-expand-lg.navbar-light
      div.container-fluid
        a.navbar-brand(href="/")
          i.bi.bi-chat-square-dots.white
          span.mx-2.white Subscribers Only
        if user
          a.text-white.text-decoration-none.d-flex.align-items-center(href="/profile")
            i.bi.bi-person-circle.white.mx-2(style='font-size: 24px')
            span= user.username
        else
          a(href="/log-in") 
            button.btn.btn-outline-light.btn-sm Login
    block content
    block foot 
      footer.bg-color.d-flex.justify-content-center
        div.p-2
          span Made by Jylx 
          a.mx-2(href='https://github.com/jylx-x/members-only')
            img(src='../public/images/GitHub-Mark-Light-32px.png' style='width: 24px')
