extends layout 

block content
  h1 Sign Up 
  form(form='' method='POST')
    label(for='first-name') First Name: 
    input#first-name(type='text' name='first_name' value=(undefined===user ? '' : user.first_name))
    label(for='last-name') Last Name: 
    input#last-name(type='text' name='last_name' value=(undefined===user ? '' : user.last_name))
    label(for='username') Username: 
    input#username(type='text' name='username' required='true' value=(undefined===user ? '' : user.username))
    label(for='password') Password: 
    input#password(type='password' name='password' required='true')
    label(for='confirm-password') Confirm Password: 
    input#confirm-password(type='password' name='password-confirm' required='true')
    button(type='submit') Submit
  if errors 
    ul
      for error in errors 
        li!= error.msg